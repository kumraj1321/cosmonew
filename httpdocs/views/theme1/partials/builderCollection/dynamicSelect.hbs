{{#section 'css'}}
    <link rel="stylesheet" href="{{basePath}}/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="{{basePath}}/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link rel="stylesheet" href="{{basePath}}/plugins/select2/css/select2.css">
    <link rel="stylesheet" href="{{basePath}}/dist/css/main.css">
{{/section}}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->

    {{!-- {{error}} --}}

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="container">
                    <div class="col-md-12">


                        <div class="card card-info">
                            <div class="card-header">

                                <h2 class="card-title">Dynamic Select</h2>
                                <br />
                                <p>Enter select options with proper validations.</p>

                            </div>
                            <div class="card-body">
                                <form id="dynamicSelect" method="post" action="/field-structure">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label> Name <span class="ip-req">*</span></label>
                                                <input style="display: none;" class="collection_name" type="text"
                                                    name="collection_name" value={{collection_name}}>
                                                <input type="text" value="dynamicSelect" style="display:none"
                                                    name="field_type" />
                                                <input type="text" value="{{data.first_name}}"
                                                    class="form-control field_name" name="field_name"
                                                    placeholder="Please enter the name for dynamic select field" />
                                            </div>
                                        </div>


                                    </div>
                                    {{!-- {{log alldata "alldata from dynamic select"}} --}}

                                    <div class="form-group">
                                        <label>Select Collection </label>
                                        <select class="form-control" name="collection_selected"
                                            id="collection_selected">
                                            {{#each alldata}}
                                                <option value={{this.collection_name}}>{{this.collection_name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Select Field </label>
                                        <select class="form-control" name="field_selected" id="field_selected">

                                        </select>
                                    </div>


                                    <div class="form-group">
                                        <label>Select Type </label>
                                        <select class="form-control" name="select_type" id="select_type">
                                            <option value="0">Single Select</option>
                                            <option value="1">Multi Select</option>
                                        </select>
                                    </div>

                                    <div class="form-group mt-5">
                                        <button type="submit" class="btn btn-info btn-block"
                                            id="btn-submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        {{!-- </div> --}}
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
