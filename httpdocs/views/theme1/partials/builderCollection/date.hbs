                                                <input type="text" value="date" style="display:none"
                                                    name="field_type" />
                                                <input type="text" value="{{data.first_name}}" class="form-control"
                                                    name="field_name"
                                                    placeholder="Please enter the name for the date field." />
                                            </div>
                                        </div>

                                    </div>

                                    <div class="form-group mt-5">
                                        <button type="submit" class="btn btn-info btn-block"
                                            id="btn-submit">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        {{!-- </div> --}}
